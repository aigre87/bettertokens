							a.btn.btn-outline-white(href='/pdf/TSA_Report.pdf') Read
	#modal-partner-dlg.modal-item.remodal(data-remodal-id="modal")
		form(method='post' action='/partner/send')
			.modal-title Become our partner
			.input-wrap
				label.control-label-block Company
				input.form-input.required(name='company' type='text' placeholder='Company name')
			.input-wrap
				label.control-label-block Company representative
				input.form-input.required(name='name' type='text' placeholder='First name, Last name')
			.input-wrap
				label.control-label-block Company web site
				input.form-input.required(name='site' type='text' placeholder='https://sitename.sample/')
			.input-wrap
				label.control-label-block Contact email
				input.form-input.email(name='email' type='email' placeholder='email@sample.com')
			.row
				.col-6: button.btn.btn-block.btn-gray.remodal-cancel(type='reset' data-remodal-action="cancel") CANCEL
				.col-6: button.btn.btn-block#modalSend(type='submit') JOIN US
	include includes/footer